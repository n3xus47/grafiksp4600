# Konfiguracja aplikacji GRAFIKSP4600
# Skopiuj ten plik jako .env i uzupełnij wartości

# Środowisko (development, production, testing)
FLASK_ENV=development

# Klucz szyfrowania sesji (wygeneruj bezpieczny klucz dla produkcji)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Konfiguracja Google OAuth2
OOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Konfiguracja bazy danych (opcjonalnie, domyślnie app.db)
DATABASE_PATH=app.db
DATABASE_URL=sqlite:///app.db

# Konfiguracja sesji
SESSION_COOKIE_SECURE=false  # true dla HTTPS w produkcji
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Konfiguracja rate limiting
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://

# Konfiguracja logowania
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# Konfiguracja email (opcjonalnie)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Konfiguracja bezpieczeństwa
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Konfiguracja debugowania (tylko dla development)
DEBUG=true
FLASK_DEBUG=true

# Konfiguracja testów
TESTING=false
TEST_DATABASE_URL=sqlite:///test.db

# Konfiguracja bezpieczeństwa - nagłówki HTTP
HSTS_MAX_AGE=31536000
CSP_POLICY=upgrade-insecure-requests; block-all-mixed-content

# VAPID keys dla Web Push Notifications (wygeneruj nowe klucze!)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CLAIM_EMAIL=admin@grafik4600.com
