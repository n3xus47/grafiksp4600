# Konfiguracja produkcyjna GRAFIKSP4600
# Używane w środowisku produkcyjnym

# Środowisko
FLASK_ENV=production

# Klucz szyfrowania sesji (WYMAGANE - wygeneruj bezpieczny klucz!)
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-KEY-IN-PRODUCTION

# Konfiguracja Google OAuth2 (WYMAGANE)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Lista dozwolonych emaili (WYMAGANE)
WHITELIST_EMAILS=admin@example.com,user@example.com

# Konfiguracja bazy danych
DATABASE_PATH=app.db
DATABASE_URL=sqlite:///app.db

# Konfiguracja sesji (produkcja z HTTPS)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Konfiguracja rate limiting (restrykcyjne)
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://

# Konfiguracja logowania
LOG_LEVEL=WARNING
LOG_FILE=/var/log/grafiksp4600/app.log

# Konfiguracja email (opcjonalnie)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Konfiguracja bezpieczeństwa
ALLOWED_HOSTS=grafik4600.com,www.grafik4600.com
CORS_ORIGINS=https://grafik4600.com,https://www.grafik4600.com

# Konfiguracja debugowania (WYŁĄCZONE w produkcji)
DEBUG=false
FLASK_DEBUG=false

# Konfiguracja testów
TESTING=false
TEST_DATABASE_URL=sqlite:///test.db

# Konfiguracja bezpieczeństwa - nagłówki HTTP
HSTS_MAX_AGE=31536000
CSP_POLICY=upgrade-insecure-requests; block-all-mixed-content
